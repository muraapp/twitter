<div class="container">
    <div class= "wrapper col-md-6 col-md-offset-3 col-sm-10">
        <%= render 'form' %>
        <p id="notice"><%= notice %></p>
        <% @tweets.each do |tweet| %>
        <div class="row">
        <p><%= tweet.content %></p>
        <%= link_to "編集", edit_tweet_path(tweet.id), data: {confirm: '本当に編集してもいいですか？'} %>
        <%= link_to "削除", tweet_path(tweet), method: :delete, data: {confirm: '本当に削除してもいいですか？'} %>
        </div>
        <% end %>
    </div>
</div>

<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>